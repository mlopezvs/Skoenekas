<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
 
	<name>COM_DNAGIFTS</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>May 2012</creationDate>
	<author>Morne Louw</author>
	<authorEmail>louw.morne@gmail.com</authorEmail>
	<authorUrl>http://www.dnagifts.co.za</authorUrl>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<!--  The version string is recorded in the components table -->
	<version>0.1.24</version>
	<!-- The description is optional and defaults to the name -->
	<description>COM_DNAGIFTS_DESCRIPTION</description>
		
	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update> <!-- Runs on update; New in 2.5 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
 
	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>dnagifts.php</filename>
		<filename>controller.php</filename>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>views</folder>
		<folder>models</folder>
		<folder>language</folder>
		<folder>store</folder>
  <folder>js</folder>
  <folder>css</folder>
	</files>
 
	<media destination="com_dnagifts" folder="media">
		<filename>index.html</filename>
		<folder>images</folder>
	</media>
	
	<administration>
		<!-- Administration Menu Section -->
		 <!--<menu img="class:dnagifts16x16-gift">COM_DNAGIFTS_MENU</menu> -->
		<menu img="../media/com_dnagifts/images/gift-16x16.png">COM_DNAGIFTS_MENU</menu>
		<submenu>
		 <!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<!--
			<menu link="option=com_dnagifts" view="tests" img="../media/com_dnagifts/images/Tests-16x16.png"
									alt="DNAGifts/Test">com_dnagifts_submenu_tests</menu>
			<menu link="option=com_dnagifts&amp;view=questions" view="questions" img="../media/com_dnagifts/images/Options-16x16.png"
									alt="DNAGifts/Questions">com_dnagifts_submenu_questions</menu>
			<menu link="option=com_dnagifts&amp;view=gifts" view="gifts" img="../media/com_dnagifts/images/Gift-16x16.png"
									alt="DNAGifts/Gifts">com_dnagifts_submenu_gifts</menu>
			-->
			<menu link="option=com_dnagifts" view="tests" img="class:dnagifts16x16-test"
									alt="DNA Gifts/Manage Tests">com_dnagifts_tests</menu>
			<menu link="option=com_dnagifts&amp;view=questions" view="questions" img="class:dnagifts16x16-question"
									alt="DNA Gifts/Manage Questions">com_dnagifts_questions</menu>
			<menu link="option=com_dnagifts&amp;view=gifts" view="gifts" img="class:dnagifts16x16-gift"
									alt="DNA Gifts/Mange Gifts">com_dnagifts_gifts</menu>
		 <menu link="option=com_dnagifts&amp;view=answers" view="answers" img="class:dnagifts16x16-answer"
									alt="DNA Gifts/Mange Answers">com_dnagifts_answers</menu>
			
		</submenu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>dnagifts.php</filename>
			<filename>controller.php</filename>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>controllers</folder>
   <folder>helpers</folder>
			<folder>js</folder>
   <folder>css</folder>
		</files>
		
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_dnagifts.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_dnagifts.sys.ini</language>
		</languages>
	</administration>
 
</extension>